<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_custom_happnies"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <EditText
        android:id="@+id/happnies_bank_diary_content"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selected_weather"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:id="@+id/selected_mood"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:id="@+id/selected_img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:id="@+id/selected_img2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:id="@+id/selected_img3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:id="@+id/recorded_voice"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp" />


    </LinearLayout>


</LinearLayout>